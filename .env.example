# ── Airflow ────────────────────────────────────────────────────────────────────
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False

# ── ClickHouse Connection ─────────────────────────────────────────────────────
AIRFLOW__CONNECTIONS__CLICKHOUSE_DEFAULT=

# ── SMTP (for email notifications) ────────────────────────────────────────────
AIRFLOW__SMTP__SMTP_HOST=
AIRFLOW__SMTP__SMTP_PORT=587
AIRFLOW__SMTP__SMTP_STARTTLS=True
AIRFLOW__SMTP__SMTP_USER=
AIRFLOW__SMTP__SMTP_PASSWORD=changeme
AIRFLOW__SMTP__SMTP_MAIL_FROM=

# ── Aurora PostgreSQL Connection ──────────────────────────────────────────────
AIRFLOW__CONNECTIONS__AURORA_MEDALLION_ETL=

# ── Notification email ────────────────────────────────────────────────────────
ALERT_EMAIL=

# ── S3 DAG bucket ─────────────────────────────────────────────────────────────
S3_DAG_BUCKET=

# ── Airflow Variables (set via UI: Admin > Variables, or CLI) ────────────────
# These are NOT env vars — they are stored in Airflow's metadata DB.
# Set them once via the Airflow UI or CLI:
#   airflow variables set alert_email       "changeme@example.com"
#   airflow variables set clickhouse_conn_id "clickhouse_default"
#   airflow variables set aurora_conn_id     "aurora_medallion_etl"
#   airflow variables set gold_export_s3_bucket ""
#   airflow variables set gold_export_s3_prefix "data"
